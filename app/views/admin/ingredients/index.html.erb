<div class="custom-container">
<h3>Ingredients:</h3>
  <%= link_to 'add new', [:new, :admin, :ingredient],
  class:"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button-container"%>


<table width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.name %></td>
      <td><%= link_to 'Edit', [:edit, :admin, ingredient] %></td>
      <td><%= link_to 'Destroy', [:admin, ingredient], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
