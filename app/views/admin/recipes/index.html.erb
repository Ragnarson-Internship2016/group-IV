<h1>Recipes:</h1>
<table width="100%" border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= link_to 'Edit', [:edit, :admin, recipe] %></td>
        <td><%= link_to 'Destroy', [:admin, recipe], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'New Recipe', [:new, :admin, :recipe] %></p>
